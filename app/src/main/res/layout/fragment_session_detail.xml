<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout">

    <data>
        <variable
                name="session"
                type="be.fos.saamdagen.model.Session" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:textAppearance="@style/TextAppearance.Saamdagen.H1"
                    android:text="@{session.title}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/session_title"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

            <TextView
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:text="@{session.description}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/description"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@id/session_title" android:layout_marginTop="8dp"/>

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/to_map_fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="@dimen/margin_normal"
                        android:contentDescription="@string/map_select_mode"
                        app:backgroundTint="@color/primaryColor"
                        app:background="@color/primaryColor"
                        app:tint="@color/secondaryColor"
                        app:srcCompat="@drawable/ic_nav_map"
                        app:layout_dodgeInsetEdges="bottom"
                        android:elevation="8dp"
                        />
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>