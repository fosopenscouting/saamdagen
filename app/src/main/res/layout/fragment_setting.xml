<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="be.fos.saamdagen.BuildConfig" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                style="@style/Widget.AppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">

            <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:gravity="center"
                    android:text="@string/title_info"
                    android:textAppearance="@style/TextAppearance.Saamdagen.ToolbarTitle"
                    app:layout_scrollFlags="snap|exitUntilCollapsed"
                    />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
                android:id="@+id/settings_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                    android:id="@+id/settings_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/margin_normal"
                    android:paddingBottom="@dimen/margin_normal"
                    tools:targetApi="o">

                <!-- AppCompat/MaterialComponents layout inflators don't automatically handle
                     Switch widgets. See https://material.io/develop/android/components/switch/ -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/settings_time_zone"
                        style="@style/Widget.Saamdagen.Settings.Switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Anonieme gebruiksstatistieken verzamelen" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/settings_enable_notifications"
                        style="@style/Widget.Saamdagen.Settings.Switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Locatie inschakelen" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/settings_send_anonymous_usage_statistics"
                        style="@style/Widget.Saamdagen.Settings.Switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notificaties ontvangen" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:dividerHorizontal" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_normal"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_large"
                        android:textAppearance="@style/TextAppearance.Saamdagen.Overline"
                        android:text="Over" />


                <TextView
                        android:id="@+id/open_source_license"
                        style="@style/Widget.Saamdagen.Settings.Button.About"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Open source licenties"/>


                <TextView
                        android:id="@+id/version_build_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:minHeight="48dp"
                        android:padding="@dimen/margin_normal"
                        android:textAppearance="?textAppearanceBody2"
                        />



            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
