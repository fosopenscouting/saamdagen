<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:textAppearance="@style/TextAppearance.Saamdagen.H1"
                    android:text="Sessie naam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/session_title"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

            <TextView
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:text="Sessie beschrijving"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/description"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@id/session_title" android:layout_marginTop="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>