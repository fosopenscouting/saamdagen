<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable name="session" type="be.fos.saamdagen.model.Session"/>
        <variable
                name="eventListener"
                type="be.fos.saamdagen.ui.session.SessionActions" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       android:background="@color/white"
            android:onClick="@{() -> eventListener.openSessionDetail(session.title, session.description)}">


        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline"
                app:layout_constraintGuide_begin="@dimen/session_keyline"/>
        <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{session.title}"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toStartOf="@+id/bookmark_session"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="What's new in Android"
                android:textAppearance="@style/TextAppearance.Saamdagen.AgendaTitle"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:textSize="18sp"/>

        <com.google.android.material.internal.CheckableImageButton
                android:id="@+id/bookmark_session"
                android:layout_width="@dimen/a11y_min_touch_target"
                android:layout_height="@dimen/a11y_min_touch_target"
                android:background="?selectableItemBackgroundBorderless"
                android:checked="true"
                android:contentDescription="@string/star"
                android:src="@drawable/asld_star_event"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>


        <TextView
                android:id="@+id/length_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:text="@{session.location}"
                tools:text="May 7 / Amphitheatre"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>