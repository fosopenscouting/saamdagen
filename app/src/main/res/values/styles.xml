<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:statusBarColor" tools:targetApi="M">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Widget.Saamdagen" parent="@android:style/Widget" />

    <style name="Widget.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.Saamdagen.TimeHeaders">
        <item name="android:width">@dimen/block_keyline</item>
        <item name="android:paddingTop">@dimen/time_header_padding_top</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="hourTextSize">@dimen/time_header_hour_text_size</item>
        <item name="hourMinTextSize">@dimen/time_header_hour_min_text_size</item>
        <item name="meridiemTextSize">@dimen/time_header_meridiem_text_size</item>
    </style>

    <style name="Widget.Saamdagen.SessionHeaders">
        <item name="android:width">@dimen/session_keyline</item>
        <item name="android:paddingTop">@dimen/time_header_padding_top</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="sessionTextSize">@dimen/session_header_hour_text_size</item>
        <item name="sessionMinTextSize">@dimen/session_header_hour_min_text_size</item>

    </style>

    <style name="TextAppearance.Widget.Toolbar" parent="">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Saamdagen.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">

    </style>

    <style name="TextAppearance.Saamdagen.SessionTitle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Saamdagen.AgendaTitle" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Saamdagen.ListSecondary" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>



    <style name="TextAppearance.Saamdagen.Tab" parent="@style/TextAppearance.Design.Tab">

        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavigationView.Active">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Saamdagen.Tabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.Saamdagen.Tab</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="Widget.Saamdagen.BottomNav" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/secondaryColor</item>
        <item name="itemTextColor">@color/secondaryColor</item>
        <item name="itemBackground">@color/primaryColor</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark</item>
    </style>

    <style name="TextAppearance.Saamdagen.CollapsibleCard" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/collapsing_section</item>
    </style>

    <!-- Section headers -->
    <style name="TextAppearance.Saamdagen.Overline" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- For titles, e.g. Event Detail, Speaker Detail -->
    <style name="TextAppearance.Saamdagen.H1" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_h1</item>

    </style>

    <!-- For smaller titles, e.g. Schedule day decorations -->
    <style name="TextAppearance.IOSched.H2" parent="@style/TextAppearance.Saamdagen.H1">
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <style name="TextAppearance.Saamdagen.H3" parent="@style/TextAppearance.Saamdagen.H1">
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <style name="TextAppearance.Saamdagen.Map.MarkerLabel" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="Widget.Saamdagen.News.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">?android:attr/colorControlHighlight</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">@dimen/news_card_corner_radius</item>
    </style>

    <style name="Widget.Saamdagen.Settings" />

    <style name="Widget.Saamdagen.Settings.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:background">@null</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="switchPadding">@dimen/margin_small</item>
        <item name="switchTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.Saamdagen.Settings.Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingRight">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>

    <style name="Widget.Saamdagen.Settings.Button.About">
        <item name="android:textAppearance">@style/TextAppearance.Saamdagen.AboutButtons</item>
    </style>

    <style name="TextAppearance.Saamdagen.AboutButtons" parent="@style/TextAppearance.Saamdagen.ListPrimary">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <!-- List item primary text, e.g. event titles, codelab titles -->
    <style name="TextAppearance.Saamdagen.ListPrimary" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:letterSpacing">0</item>
    </style>

</resources>
